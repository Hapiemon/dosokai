// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Response {
  id                String   @id @default(cuid())
  lastName          String   // 姓
  firstName         String   // 名
  maidenName        String?  // 旧姓
  class             String   // 1, 2, 3, 4, 不明
  eventDates        String[] // 開催日程 (5/3, 6/20など)
  companionStatus   String   // 無し, 有り
  companionAdults   Int?     // 同伴者(大人)
  companionChildren Int?     // 同伴者(子供)
  hasAllergy        Boolean
  allergyDetails    String?  // アレルギーの詳細
  remarks           String?  // 備考
  createdAt         DateTime @default(now())

  @@map("responses")
}
